<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SixthActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MOVIE SHOW"
            android:textSize="50dp"
            android:padding="40dp"
            android:textStyle="bold"
            android:textColor="@color/usecolor3"
            android:background="@color/usecolor1"

            />
        <TextView
            android:layout_marginVertical="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie Name: "
            android:textSize="50dp"
            android:textColor="@color/usecolor1"
            android:textStyle="bold"

            />
        <TextView
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Harry Potter and the Deathly Hallows(2010)"
            android:textSize="40dp"
            android:textColor="@color/usecolor4"
            android:textStyle="italic"

            />
        <TextView
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DATE: 01 jan 2020"
            android:textSize="45dp"
            android:textColor="@color/usecolor3"
            android:textStyle="bold"

            />
        <TextView
            android:layout_marginVertical="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TIME: 9.00pm-10.00pm"
            android:textSize="32dp"
            android:textColor="@color/usecolor5"
            android:textStyle="bold"

            />
        <TextView
            android:layout_marginVertical="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trailer-->"
            android:textSize="50dp"

            />


        <ImageView
            android:layout_width="400dp"
            android:layout_height="250dp"
            android:background="@color/usecolor1"
            android:src="@drawable/hp1" />
        <ImageView
            android:layout_width="400dp"
            android:layout_height="250dp"
            android:background="@color/usecolor1"
            android:src="@drawable/hp2" />

        <ImageView
            android:layout_width="400dp"
            android:layout_height="250dp"
            android:background="@color/usecolor1"
            android:src="@drawable/hp3" />


    </LinearLayout>

</ScrollView>